<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">


<!-- "Configuration" expendable menu	-->

<menu id="config" label="Configuration">
	<item label="Openbox Menu">
		<action name="Execute">
		<command>
			scribes ~/.config/openbox/menu.xml
		</command>
		</action>
	  	</item>
	  <item label="Openbox Autostart">
		<action name="Execute">
		<command>
		  	scribes ~/.config/openbox/autostart
		</command>
		</action>
	  	</item>	  
	  <item label="bashrc">
		<action name="Execute">
		<command>
			scribes ~/.bashrc</command>
		</action>
	  	</item>
	  <item label="tint2rc">
		<action name="Execute">
		<command>
			scribes ~/.config/tint2/tint2rc
		</command>
		</action>
		</item>
	  <item label="Grub-Customizer">
		<action name="Execute">
		<command>
			gksudo grub-customizer
		</command>
		</action>
	  	</item>
	  <item label="TLP Settings">
		<action name="Execute">
		<command>
		  	gksudo scribes /etc/default/tlp
		</command>
		</action>
	  	</item>
	  <item label="LxAppearance">
		<action name="Execute">
		<command>
			lxappearance
		</command>
		</action>
		</item>
	  <item label="Keyboard Shortcuts (obkey)">
		<action name="Execute">
		<command>
			obkey
		</command>
		</action>
	  	</item>
   <separator/>	  
	  <item label="Run openbox --reconfigure">
		<action name="Reconfigure" />
		</item>
   <separator/>	  
	  <item label="Exit Openbox - exit X">
		<action name="Execute">
		<command>
			openbox --exit
		</command>
		</action>
		</item>
</menu>


<!-- "Terminal" expendable menu	-->

	<menu id="terminal" label="Terminal">
		<item label="pkill imwheel">
			<action name="Execute">
			<command>
				gksudo pkill imwheel
			</command>
			</action>
			</item>
		<item label="PowerTop">
			<action name="Execute">
			<command>
				terminator --command="sudo powertop"
			</command>
			</action>
			</item>
		<item label="pkill powertop">
			<action name="Execute">
			<command>
				gksudo pkill powertop
			</command>
			</action>
			</item>
		<item label="quickfix steam startup (broken?)">
			<action name="Execute">
			<command>
				find ~/.steam/root/ \( -name "libgc+.so*" -o -name "libxcb.so*" -o -name "libgpg-error.so*" \) -print -delete
			</command>
			</action>
			</item>
		<item label="/usr/bin/rankmirrors">
			<action name="Execute">
			<command>
				terminator -c '/usr/bin/rankmirrors -n 12 /etc/pacman.d/mirrorlist' 
			</command>
			</action>
			</item>
		<item label="Clean (1) /var/cache/pacman">
			<action name="Execute">
			<command>
				terminator -e 'gksudo paccache -ruk0 && paccache -rk 1; sleep 2'
			</command>
			</action>
			</item>
		<item label="Wipe (0) /var/cache/pacman">
			<action name="Execute">
			<command>
				terminator -e 'sudo paccache -rk 0; sleep 2'
			</command>
			</action>
			</item>
		<item label="Clear /var/log/journal/">
			<action name="Execute">
			<command>
				gksudo "bash -c 'rm -f /var/log/journal/d86c571215644190bbd37085e8c19c72/*.journal; rm -f /var/log/journal/d86c571215644190bbd37085e8c19c72/*.journal~'"
			</command>
			</action>
		</item>
	</menu>
	
	
<!-- "Keyboard" expendable menu	-->

	<menu id="Keyboard" label="Keyboard">
		<item label="us-intl">
			<action name="Execute">
			<command>
				setxkbmap -layout us -variant intl
			</command>
			</action>
			</item>			
		<item label="ch-fr">
			<action name="Execute">
			<command>
				setxkbmap -layout ch -variant fr
			</command>
			</action>
			</item>
	</menu>	







